/* Note:Your choice is C IDE */
#include "stdio.h"
void main()
{	
	int dx1=500,dx2=1000,dx3=500,dx4=250,dx5=128;//定义磁盘大小 
	int nc1=2,nc2=8,nc3=4,nc4=2,nc5=2;//定义内存 
	int bh1=1,bh2=2,bh3=3,bh4=1,bh5=2;//定义员工部门编号 
	float zj1=3458.0,zj2=7999.0,zj3=4321.8,zj4=2735.0,zj5=1568.5;//定义配置总价
	float zzc1,zzc2,zzc3;//定义三个部门总资产 
	float allzc;//定义全部部门资产 
